<%- include('../partials/user-header.ejs') %>

    <!-- option  -->
    <section class="container mt-4">
        <div class="row">
            <div class="col text-start d-grid dropdown">
                <button type="button" class="dropdown-toggle btn btn-warning btn-sm my-2 fw-bolder border border-3 border-dark"
                    data-bs-toggle="dropdown">Categories : <span class="text-capitalize"><%= displayCategory %></span></button>
                <div class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                    <a class="dropdown-item text-capitalize" href="/user/home/category/all">All product</a>
                    <hr class="dropdown-divider">
                    <% category.forEach(function(cate){ %>
                    <a class="dropdown-item text-capitalize" href="/user/home/category/<%= cate.title %>"><%= cate.title %></a>
                    <% }); %>
                </div>
            </div>
            <div class="col text-center d-grid dropdown">
                <button type="button" class="dropdown-toggle btn btn-warning btn-sm my-2 fw-bolder border border-3 border-dark"
                    data-bs-toggle="dropdown">Filter : <span class="text-capitalize"><%= displayFilter %></button>
                <div class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                    <a class="dropdown-item" href="/user/home/filter/00">All</a>
                    <hr class="dropdown-divider">
                    <a class="dropdown-item" href="/user/home/filter/01">Price 0 - 1,000</a>
                    <a class="dropdown-item" href="/user/home/filter/13">Price 1,001 - 3,000</a>
                    <a class="dropdown-item" href="/user/home/filter/31">Price 3,001 - 10,000</a>
                    <a class="dropdown-item" href="/user/home/filter/10">Price > 10,000</a>
                </div>
            </div>
            <div class="col text-end d-grid dropdown">
                <button type="button" class="dropdown-toggle btn btn-warning btn-sm my-2 fw-bolder border border-3 border-dark"
                    data-bs-toggle="dropdown">Sort By : <span class="text-capitalize"><%= displaySortby %></button>
                <div class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                    <a class="dropdown-item" href="/user/home/sortby/newest">Newest</a>
                    <a class="dropdown-item" href="/user/home/sortby/oldest">Oldest</a>
                    <a class="dropdown-item" href="/user/home/sortby/pricelowtohigh">Price low to high</a>
                    <a class="dropdown-item" href="/user/home/sortby/pricehightolow">Price high to low</a>
                </div>
            </div>
        </div>
    </section>
    
    <!-- products  -->
    <% if (product.length === 0) { %>
        <div class="mt-3 text-center">
            <h3>There are no products for your search</h3>
        </div>
    <% } else { %>  
    <main class="container mt-3">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 g-4 pb-2">
            <% product.forEach(function(product){ %>
                <div class="col">
                    <div class="card">
                        <!-- Product image -->
                        <img src="<%= product.image %>" class="card-img-top" style="height: 400px;" alt="<%= product.name %>">
                        <div class="card-body">
                            <!-- Product name -->
                            <h5 class="card-title fw-bold">
                                <%= product.name %>
                            </h5>
                            <!-- Product description -->
                            <p class="card-text">
                                <%= product.desc %>
                            </p>
                            <div class="row">
                                <div class="col text-start">
                                    <!-- Product price -->
                                    <h5 class="card-title"><span>à¸¿ <%= product.price.toLocaleString() %></span></h5>
                                </div>
                                <div class="col text-end">
                                    <a href="/user/home/product/<%= product._id %>" class="btn btn-warning fw-bold">view</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </main>
    <% } %>


    <%- include('../partials/user-footer.ejs') %>